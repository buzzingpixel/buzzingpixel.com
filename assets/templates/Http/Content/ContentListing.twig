{# @var \App\Http\Entities\Meta $meta #}
{# @var \App\Context\Content\Entities\ContentItemCollection contentItemCollection #}
{# @var \App\Http\Entities\Pagination pagination #}
{# @var \App\Context\Content\Contracts\ItemLinkResolverContract itemLinkResolver #}
{# @var \App\Context\Users\Entities\LoggedInUser LoggedInUser #}

{% set breadcrumbTrail = breadcrumbTrail ?? [] %}
{% set breadcrumbSingle = breadcrumbSingle ?? {} %}

{% extends 'Http/_Infrastructure/_Layout.twig' %}

{% block content %}
    {% include 'Http/_Infrastructure/Breadcrumbs.twig' with {
        breadcrumbTrail: breadcrumbTrail,
        breadcrumbSingle: breadcrumbSingle,
        useMaxWidth: false,
    } only %}
    <div class="pt-10 pb-14 px-4 sm:px-6 lg:pb-28 lg:px-8 max-w-screen-xl mx-auto">
        <div class="relative divide-y-2 divide-gray-200">
            {% if meta.pageHeading or meta.pageSubHeading or pagination.totalPages > 1 %}
                <div>
                    {% if meta.pageHeading.value %}
                        <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
                            {{ meta.pageHeading|smartypants }}
                        </h2>
                    {% endif %}
                    {% if meta.pageSubHeading.value %}
                        <p class="{% if meta.pageHeading.value %}mt-3{% endif %} text-xl text-gray-500 sm:mt-4">
                            {{ meta.pageSubHeading|smartypants }}
                        </p>
                    {% endif %}
                    {% if pagination.totalPages > 1 %}
                        <div
                            {% if meta.pageHeading.value or meta.pageSubHeading.value %}
                            class="mt-3"
                            {% endif %}
                        >
                            {% include 'Http/_Infrastructure/Pagination.twig' with {
                                pagination: pagination,
                            } only %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            <div class="mt-12 grid gap-16 pt-12 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-16">
                {% for item in contentItemCollection.toArray %}
                    <div>
                        <a href="{{ itemLinkResolver.resolveLinkToItem(item) }}" class="block ">
                            <p class="text-xl font-semibold text-gray-900">
                                {{ item.title|smartypants|widont }}<br>
                                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-champagne text-meteor">
                                    {{ item.date.format('n/j/Y') }}
                                </span>
                            </p>
                            <div class="mt-3 text-base text-gray-500">
                                {{ item.body|striptags|smartypants|widont|truncate(200) }}
                            </div>
                        </a>
                        {#<div class="mt-6 flex items-center">
                            <div class="flex-shrink-0">
                                <a href="{{ itemLinkResolver.resolveLinkToItem(item) }}">
                                    <span class="sr-only">Paul York</span>
                                    <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                                </a>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">
                                    <a href="#">
                                        Paul York
                                    </a>
                                </p>
                                <div class="flex space-x-1 text-sm text-gray-500">
                                    <time datetime="2020-03-16">
                                        Mar 16, 2020
                                    </time>
                                    <span aria-hidden="true">
                                        &middot;
                                    </span>
                                    <span>
                                        6 min read
                                    </span>
                                </div>
