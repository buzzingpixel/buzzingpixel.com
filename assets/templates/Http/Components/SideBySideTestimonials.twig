{# @var array testimonial1 #}
{# @var array testimonial2 #}

{% set quoteSvg %}
    <svg
        class="absolute top-0 left-0 transform -translate-x-3 -translate-y-2 h-8 w-8 text-jade"
        fill="currentColor"
        viewBox="0 0 32 32"
        aria-hidden="true"
    >
        <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
    </svg>
{% endset %}

<section class="bg-deep-sea">
    <div class="max-w-7xl mx-auto md:grid md:grid-cols-2 md:px-6 lg:px-8">
        <div class="py-12 px-4 sm:px-6 md:flex md:flex-col md:py-16 md:pl-0 md:pr-10 md:border-r md:border-aqua-deep lg:pr-16">
            <blockquote class="mt-6 md:flex-grow md:flex md:flex-col">
                <div class="relative text-lg font-medium text-white md:flex-grow">
                    {{ quoteSvg }}
                    <p class="relative">
                        {{ testimonial1.content|smartypants|widont }}
                    </p>
                </div>
                <footer class="mt-8">
                    <div class="flex items-start">
                        {% if testimonial1.image is defined %}
                            <div class="flex-shrink-0 inline-flex rounded-full border-2 border-white">
                                <img
                                    class="h-12 w-12 rounded-full"
                                    src="{{ testimonial1.image.src }}"
                                    alt="{{ testimonial1.name }}"
                                >
                            </div>
                        {% endif %}
                        <div{% if testimonial1.image is defined %} class="ml-4"{% endif %}>
                            <a
                                {% if testimonial1.href is defined %}
                                href="{{ testimonial1.href }}"
                                {% endif %}
                                class="block text-base font-medium text-white{% if testimonial1.href is defined %} hover:text-gold-sand hover:underline {% endif %}"
                            >
                                {{ testimonial1.name|smartypants }}
                            </a>
                            <div class="text-base font-medium text-champagne">
                                {{ testimonial1.positionOrCompany|smartypants }}
                            </div>
                        </div>
                    </div>
                </footer>
            </blockquote>
        </div>
        <div class="py-12 px-4 border-t-2 border-aqua-deep sm:px-6 md:py-16 md:pr-0 md:pl-10 md:border-t-0 md:border-l lg:pl-16">
            <blockquote class="mt-6 md:flex-grow md:flex md:flex-col">
                <div class="relative text-lg font-medium text-white md:flex-grow">
                    {{ quoteSvg }}
                    <p class="relative">
                        {{ testimonial2.content|smartypants|widont }}
                    </p>
                </div>
                <footer class="mt-8">
                    <div class="flex items-start">
                        {% if testimonial2.image is defined %}
                            <div class="flex-shrink-0 inline-flex rounded-full border-2 border-white">
                                <img
                                    class="h-12 w-12 rounded-full"
                                    src="{{ testimonial2.image.src }}"
                                    alt="{{ testimonial2.name }}"
                                >
                            </div>
                        {% endif %}
                        <div{% if testimonial2.image is defined %} class="ml-4"{% endif %}>
                            <a
                                {% if testimonial2.href is defined %}
                                href="{{ testimonial2.href }}"
                                {% endif %}
                                class="block text-base font-medium text-white{% if testimonial2.href is defined %} hover:text-gold-sand hover:underline{% endif %}"
                            >
                                {{ testimonial2.name|smartypants }}
                            </a>
                            <div class="text-base font-medium text-champagne">
                                {{ testimonial2.positionOrCompany|smartypants }}
                            </div>
                        </div>
                    </div>
                </footer>
            </blockquote>
        </div>
    </div>
</section>
