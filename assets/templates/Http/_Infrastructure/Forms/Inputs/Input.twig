{% set type = type ?? 'text' %}
{% set name = name ?? '' %}
{% set id = id ?? name %}
{% set value = value ?? '' %}
{% set attrs = attrs ?? [] %}
{% set errorMessage = errorMessage ?? '' %}

{% set borderClass = 'border-gray-200' %}

{% if errorMessage %}
    {% set borderClass = 'border-red' %}
{% endif %}

<input
    type="{{ type }}"
    name="{{ name }}"
    id="{{ id }}"
    class="block w-full shadow-sm focus:ring-meteor focus:border-meteor sm:text-sm rounded-md {{ borderClass }}"
    value="{{ value }}"
    {% for attrKey, attrVal in attrs %}
    {{ attrKey }}="{{ attrVal }}"
    {% endfor %}
>
