{% set type = type ?? 'text' %}
{% set name = name ?? '' %}
{% set id = id ?? name %}
{% set value = value ?? '' %}
{% set attrs = attrs ?? [] %}

<input
    type="{{ type }}"
    name="{{ name }}"
    id="{{ id }}"
    class="block w-full shadow-sm focus:ring-meteor focus:border-meteor sm:text-sm border-gray-300 rounded-md"
    value="{{ value }}"
    {% for attrKey, attrVal in attrs %}
    {{ attrKey }}="{{ attrVal }}"
    {% endfor %}
>
