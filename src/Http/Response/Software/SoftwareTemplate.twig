{% extends 'Http/_Infrastructure/_Layout.twig' %}

{# TODO: Images #}
{% set softwareItems = [
    {
        title: 'Ansel for Craft',
        slug: 'ansel-craft',
        blurb: 'The power of cropping and manipulating images at your fingertips. You can define constraints and aspect ratios to bend images to your will!',
        image: {
            src: siteUrl('/assets/img/ansel2-craft-desktop.png'),
            alt: 'Ansel for Craft Screenshot',
        },
    },
    {
        title: 'Ansel for EE',
        slug: 'ansel-ee',
        blurb: 'Featuring great user experience with drag and drop uploading, Ansel is compatible with Grid, Bloqs, and Low Variables and Channel Entries.',
        image: {
            src: siteUrl('/assets/img/ansel-crop-tablet-desktop.jpg'),
            alt: 'Ansel for EE Screenshot',
        },
    },
    {
        title: 'Treasury',
        slug: 'treasury',
        blurb: 'Treasury stores files locally, on Amazon S3, or any FTP/SFTP location and has a full developer API.',
        image: {
            src: siteUrl('/assets/img/treasury-screen-shot-tablet-desktop.jpg'),
            alt: 'Treasure Screenshot',
        },
    },
    {
        title: 'Construct',
        slug: 'construct',
        blurb: 'Easily create menus, pages, nested pages, manage routing, and more!',
        image: {
            src: siteUrl('/assets/img/construct-screen-shot-tablet-desktop.png'),
            alt: 'Construct Screenshot',
        },
    },
    {
        title: 'Category Construct',
        slug: 'category-construct',
        blurb: 'Category output made easy.',
        image: {
            src: siteUrl('/assets/img/construct-tags-tablet-desktop.png'),
            alt: 'Category Construct Screenshot',
        },
    },
] %}

{% block content %}
    {# Hero #}
    {% embed 'Http/Components/Hero.twig' only %}
        {% block heading %}
            Software
        {% endblock %}
        {% block subHeading %}
            from BuzzingPixel
        {% endblock %}
    {% endembed %}

    {# Items #}
    <div class="relative mt-16 mb-20 px-4 sm:px-6 lg:mt-24 lg:mb-28 lg:px-8">
        <div class="relative max-w-7xl mx-auto">
            <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
                {% for software in softwareItems %}
                    <a
                        href="{{ siteUrl('/software/' ~ software.slug) }}"
                        class="block flex flex-col rounded-lg shadow-lg hover:shadow-2xl overflow-hidden"
                    >
                        <div class="flex-shrink-0">
                            <img
                                class="h-48 w-full object-cover"
                                src="{{ software.image.src }}"
                                alt="{{ software.image.alt }}"
                            >
                        </div>
                        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                            <div class="flex-1">
                                <div class="mt-2">
                                    <p class="text-xl font-semibold text-gray-900">
                                        {{ software.title|smartypants }}
                                    </p>
                                    <p class="mt-3 text-base text-gray-500">
                                        {{ software.blurb|smartypants|widont }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
