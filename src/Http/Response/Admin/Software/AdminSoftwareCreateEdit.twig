{# @var string headline #}
{# @var \App\Context\Software\Entities\Software software #}

{% extends '@app/Http/Response/Account/_AccountLayout.twig' %}

{% set formAction = formAction ?? '/admin/software/create' %}

{% set message = flash('FormMessage') %}
{% if message[0] is defined %}
    {% set message = message[0] %}
{% endif %}

{% block accountContent %}
    {% if message['status'] is defined %}
        <div class="pt-6 px-4 sm:px-6 md:px-0">
            {% include 'Http/Components/Alert.twig' with {
                content: message.result.message|default(''),
                type: message['status'] == 'SUCCESSFUL' ? 'success' : 'error',
            } only %}
        </div>
    {% endif %}
    <div
        class="flex-1 relative focus:outline-none"
        tabindex="0"
        xmlns:x-bind="http://www.w3.org/1999/xhtml"
    >
        <div class="py-6">
            <div class="px-4 sm:px-6 md:px-0 mb-4">
                <h1 class="text-2xl font-semibold text-gray-900">
                    {{ headline|smartypants }}
                </h1>
            </div>
            <div class="px-4 sm:px-6 md:px-0">
                {# Content #}
                <div class="bg-white shadow sm:rounded-md p-4">
                    <form
                        action="{{ formAction }}"
                        method="POST"
                        accept-charset="UTF-8"
                        data-name="AccountProfileForm"
                    >
                        <div>
                            <div class="flex justify-end">
                                <button
                                    type="submit"
                                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-meteor hover:bg-pumpkin-skin focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pumpkin-skin"
                                >
                                    Create
                                </button>
                            </div>
                        </div>
                        <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
                            <div class="pt-4 space-y-6 sm:pt-10 sm:space-y-5">
                                <div class="space-y-6 sm:space-y-5">
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:pt-5">
                                        <label for="slug" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Slug
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <input
                                                type="text"
                                                name="slug"
                                                id="slug"
                                                class="max-w-lg block w-full shadow-sm focus:ring-meteor focus:border-meteor sm:text-sm border-gray-300 rounded-md"
                                                value="{{ software.slug }}"
                                            >
                                        </div>
                                    </div>
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                                        <label for="name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Name
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <input
                                                type="text"
                                                name="name"
                                                id="name"
                                                class="max-w-lg block w-full shadow-sm focus:ring-meteor focus:border-meteor sm:text-sm border-gray-300 rounded-md"
                                                value="{{ software.name }}"
                                            >
                                        </div>
                                    </div>
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                                        <label for="is_for_sale" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Is For Sale?
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <button
                                                id="is_for_sale"
                                                type="button"
                                                class="{{ software.isForSale ? 'bg-deep-sea' : 'bg-gray-200' }} relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-deep-sea"
                                                aria-pressed="false"
                                                x-data="{isOn: {{ software.isForSale ? 'true' : 'false' }}}"
                                                @click="isOn = !isOn"
                                                :aria-pressed="isOn"
                                                :class="{'bg-deep-sea': isOn, 'bg-gray-200': !isOn}"
                                            >
                                                <span class="sr-only">Is for Sale?</span>
                                                <span
                                                    aria-hidden="true"
                                                    class="{{ software.isForSale ? 'translate-x-5' : 'translate-x-0' }} pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"
                                                    :class="{'translate-x-5': isOn, 'translate-x-0': !isOn}"
                                                ></span>
                                                <input
                                                    type="hidden"
                                                    name="is_for_sale"
                                                    value="{{ software.isForSale ? '1' : '0' }}"
                                                    x-bind:value="isOn ? 1 : 0"
                                                >
                                            </button>
                                        </div>
                                    </div>
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                                        <label for="price" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Price
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <div class="max-w-lg flex rounded-md shadow-sm">
                                                <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                                                    $
                                                </span>
                                                <input
                                                    type="text"
                                                    name="price"
                                                    id="price"
                                                    class="flex-1 block w-full focus:ring-meteor focus:border-meteor min-w-0 rounded-none rounded-r-md sm:text-sm border-gray-300"
                                                    value="{{ software.priceFormattedNoSymbol }}"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                                        <label for="renewal_price" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Renewal Price
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <div class="max-w-lg flex rounded-md shadow-sm">
                                                <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                                                    $
                                                </span>
                                                <input
                                                    type="text"
                                                    name="renewal_price"
                                                    id="renewal_price"
                                                    class="flex-1 block w-full focus:ring-meteor focus:border-meteor min-w-0 rounded-none rounded-r-md sm:text-sm border-gray-300"
                                                    value="{{ software.renewalPriceFormattedNoSymbol }}"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
                                        <label for="is_subscription" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
                                            Is Subscription?
                                        </label>
                                        <div class="mt-1 sm:mt-0 sm:col-span-2">
                                            <button
                                                id="is_subscription"
                                                type="button"
                                                class="{{ software.isSubscription ? 'bg-deep-sea' : 'bg-gray-200' }} relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-deep-sea"
                                                aria-pressed="false"
                                                x-data="{isOn: {{ software.isSubscription ? 'true' : 'false' }}}"
                                                @click="isOn = !isOn"
                                                :aria-pressed="isOn"
                                                :class="{'bg-deep-sea': isOn, 'bg-gray-200': !isOn}"
                                            >
                                                <span class="sr-only">Is Subscription?</span>
                                                <span
                                                    aria-hidden="true"
                                                    class="{{ software.isSubscription ? 'translate-x-5' : 'translate-x-0' }} pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"
                                                    :class="{'translate-x-5': isOn, 'translate-x-0': !isOn}"
                                                ></span>
                                                <input
                                                    type="hidden"
                                                    name="is_subscription"
                                                    value="{{ software.isSubscription ? '1' : '0' }}"
                                                    x-bind:value="isOn ? 1 : 0"
                                                >
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="pt-5">
                            <div class="flex justify-end">
                                <button
                                    type="submit"
                                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-meteor hover:bg-pumpkin-skin focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pumpkin-skin"
                                >
                                    Create
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                {# /EndContent #}
            </div>
        </div>
    </div>
{% endblock %}
